<%- include('../includes/head.ejs') %>
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
    <div class="container">
      <a href="index.html" class="navbar-brand">LAMS</a>
    </div>
  </nav>

  <!-- HEADER -->
  <header id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>
            <i class="fas fa-user"></i> Existing User?</h1>
        </div>
      </div>
    </div>
  </header>

  <!-- ACTIONS -->
  <section id="actions" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">

      </div>
    </div>
  </section>

  <!-- LOGIN -->
  <section id="login">
    <div class="container">
        <%- include('../includes/errorMessage.ejs', {errorMessage : errorMessage}) %>
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card">
            <div class="card-header">
              <h4>LASU</h4>
            </div>
            <div class="card-body">
              <form action="/user/reset" method="POST">
                
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="hidden" name="_csrf" value="<%= csrf %>">
                  <input type="text" name="email" class="form-control">
                </div>
                
                <input type="submit" value="Reset Now" class="btn btn-primary btn-block">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <%- include('../includes/end.ejs') %>


  <script>
    // Get the current year for the copyright
    $('#year').text(new Date().getFullYear());
  </script>
</body>

</html>